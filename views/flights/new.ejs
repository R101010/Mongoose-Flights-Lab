<%- include('../partials/header') %>

<form id="new-flight" action="/flights" method="POST">
  <label for="airline">Airline</label>
  <select name="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
  </select><br>

  <label for="flightNum">Flight Number (10 - 9999):</label>
  <input type="text" name="flightNum"><br>

  <label for="departs">Choose time and date for departure:</label>
  <input type="datetime-local" id="departs" name="departs"><br>
  
  <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
  </select><br><br>
  
  <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>








